---
import Github from "@/icons/Github.astro"
import Linkedin from "@/icons/Linkedin.astro"
import AnchorButton from "./AnchorButton.astro"
import DynamicImage from "./DynamicImage.astro"

const { props } = Astro.props
const { title, subTitle, image, id, linkedInUrl, githubUrl } = props
---

<div class="hero mb-6 min-h-screen" id={id}>
	<div class="hero-content mx-auto flex-col text-center">
		<DynamicImage
			styles="size-80 rounded-full border-2 border-white shadow-2xl"
			image={image}
			width={300}
			height={300}
			alt="Profile picture"
		/>
		<div>
			<h1 class="text-5xl font-bold text-red-500">{title}</h1>
			<p class="py-6 text-slate-400">{subTitle}</p>
			<div class="flex justify-center gap-4">
				<AnchorButton title="Repository" url={githubUrl}>
					<Github />
				</AnchorButton>
				<AnchorButton title="LinkedIn" url={linkedInUrl}>
					<Linkedin />
				</AnchorButton>
			</div>
		</div>
	</div>
</div>
