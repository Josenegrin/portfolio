---
import Footer from "@/components/Footer.astro"
import Header from "@/components/Header.astro"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Jose Negrin portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-b from-slate-900 to-slate-700">
		<Header />
		<main class="mx-auto w-11/12 md:w-10/12 lg:w-8/12 xl:w-6/12">
			<slot />
		</main>
		<Footer />
	</body>
</html>
